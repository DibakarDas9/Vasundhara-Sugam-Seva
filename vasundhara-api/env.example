# Vasundhara API Service Environment Configuration

# Application
APP_NAME=Vasundhara API
APP_VERSION=1.0.0
NODE_ENV=development
DEBUG=false

# Server
HOST=0.0.0.0
PORT=5000

# Database
MONGODB_URI=mongodb://localhost:27017
MONGODB_DATABASE=vasundhara
MONGODB_MAX_POOL_SIZE=10
MONGODB_SERVER_SELECTION_TIMEOUT=5000
MONGODB_SOCKET_TIMEOUT=45000

# Redis
REDIS_URI=redis://localhost:6379

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
JWT_ISSUER=vasundhara-api
JWT_AUDIENCE=vasundhara-app

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5000

# External Services
ML_SERVICE_URL=http://localhost:8000
ML_SERVICE_TIMEOUT=5000

# Email
EMAIL_ENABLED=true
EMAIL_SERVICE=smtp
EMAIL_API_KEY=
EMAIL_FROM=noreply@vasundhara.app
EMAIL_SMTP_HOST=smtp.mailtrap.io
EMAIL_SMTP_PORT=587
EMAIL_SMTP_SECURE=false
EMAIL_SMTP_USER=your-smtp-username
EMAIL_SMTP_PASS=your-smtp-password

# SMS
SMS_SERVICE=twilio
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_FROM_NUMBER=your-twilio-phone-number

# Storage
STORAGE_SERVICE=local
S3_BUCKET=your-s3-bucket
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=your-s3-access-key
S3_SECRET_ACCESS_KEY=your-s3-secret-key

# Payment
PAYMENT_SERVICE=stripe
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Background Jobs
JOBS_REDIS_URI=redis://localhost:6379
JOBS_CONCURRENCY=5
JOBS_RETRY_ATTEMPTS=3
JOBS_RETRY_DELAY=5000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
RATE_LIMIT_SKIP_SUCCESSFUL=false

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined
LOG_FILE=logs/app.log
