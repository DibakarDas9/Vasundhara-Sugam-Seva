# Vasundhara Frontend Environment Configuration

# Application
NODE_ENV=development
NEXT_PUBLIC_APP_NAME=Vasundhara
NEXT_PUBLIC_APP_VERSION=1.0.0

# API URLs
NEXT_PUBLIC_API_URL=http://localhost:5000
NEXT_PUBLIC_ML_SERVICE_URL=http://localhost:8000

# External Services
NEXT_PUBLIC_MAPBOX_TOKEN=your-mapbox-token
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=your-ga-id
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_REMOTE_AUTH=false
NEXT_PUBLIC_ENABLE_REMOTE_ADMIN=false

# Server-side AI meal generation (used by /api/ai/meal-plan)
OPENAI_API_KEY=sk-your-key
OPENAI_API_URL=https://api.openai.com/v1/chat/completions
OPENAI_MEAL_MODEL=gpt-4o-mini
NEXT_PUBLIC_ENABLE_PWA=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true

# Admin access gate
NEXT_PUBLIC_ADMIN_ACCESS_ID=admin-id
NEXT_PUBLIC_ADMIN_ACCESS_PASSCODE=super-secret-code

# Social Login
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-google-client-id
NEXT_PUBLIC_FACEBOOK_APP_ID=your-facebook-app-id

# Payment
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key

# Storage
NEXT_PUBLIC_S3_BUCKET=your-s3-bucket
NEXT_PUBLIC_S3_REGION=us-east-1
