# Vasundhara ML Service Environment Configuration

# Application
APP_NAME=Vasundhara ML Service
VERSION=1.0.0
DEBUG=false

# API
API_V1_STR=/api/v1
HOST=0.0.0.0
PORT=8000

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:5000","https://vasundhara.app"]
ALLOWED_HOSTS=["*"]

# Database
MONGODB_URL=mongodb://localhost:27017
MONGODB_DATABASE=vasundhara

# Redis
REDIS_URL=redis://localhost:6379
REDIS_DB=0

# ML Models
MODEL_PATH=./models
EXPIRY_MODEL_NAME=expiry_prediction_model.pkl
IMAGE_MODEL_NAME=image_classification_model.pkl
RECIPE_MODEL_NAME=recipe_recommendation_model.pkl

# Model Training
TRAINING_DATA_PATH=./data/training
VALIDATION_DATA_PATH=./data/validation
BATCH_SIZE=32
EPOCHS=100
LEARNING_RATE=0.001

# Cache
CACHE_TTL=3600
CACHE_PREFIX=vasundhara:ml:

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# External Services
API_SERVICE_URL=http://localhost:5000
S3_BUCKET=
S3_ACCESS_KEY=
S3_SECRET_KEY=
